<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abroad.hr.dao.IUserBaseDao">

	<resultMap type="com.abroad.hr.domain.UserBase" id="userBase">
		<result property="id" column="id" />	
		<result property="accountId" column="account_id" />	
		<result property="userName" column="user_name" />	
		<result property="nickName" column="nick_name" />	
		<result property="userAge" column="user_age" />	
		<result property="sex" column="sex" />	
		<result property="birthday" column="birthday" />	
		<result property="isMarried" column="isMarried" />	
		<result property="countryId" column="country_id" />	
		<result property="cityId" column="city_id" />	
		<result property="userTypeCode" column="user_type_code" />	
		<result property="icon" column="icon" />	
		<result property="hobby" column="hobby" />	
		<result property="specialtyDes" column="specialty_des" />	
		<result property="beginWorkDate" column="begin_work_date" />	
		<result property="caseCount" column="case_count" />	
		<result property="motto" column="motto" />	
	</resultMap>
	
	<sql id="insertKey">
		<!-- 去掉多余的逗号 -->
		<trim suffixOverrides=",">
				id,
			<if test="null != accountId">
				account_id,
			</if>
			<if test='null != userName and !userName.equals("")'>
				user_name,
			</if>
			<if test='null != nickName and !nickName.equals("")'>
				nick_name,
			</if>
			<if test="null != userAge">
				user_age,
			</if>
			<if test="null != sex">
				sex,
			</if>
			<if test="null != birthday">
				birthday,
			</if>
			<if test="null != isMarried">
				isMarried,
			</if>
			<if test="null != countryId">
				country_id,
			</if>
			<if test="null != cityId">
				city_id,
			</if>
			<if test="null != userTypeCode">
				user_type_code,
			</if>
			<if test='null != icon and !icon.equals("")'>
				icon,
			</if>
			<if test='null != hobby and !hobby.equals("")'>
				hobby,
			</if>
			<if test='null != specialtyDes and !specialtyDes.equals("")'>
				specialty_des,
			</if>
			<if test="null != beginWorkDate">
				begin_work_date,
			</if>
			<if test="null != caseCount">
				case_count,
			</if>
			<if test='null != motto and !motto.equals("")'>
				motto
			</if>
		</trim>
	</sql>
	<sql id="insertValue">
		<!-- 去掉多余的逗号 -->
		<trim suffixOverrides=",">
				#{id},
			<if test="null != accountId">
				#{accountId},
			</if>
			<if test='null != userName and !userName.equals("")'>
				#{userName},
			</if>
			<if test='null != nickName and !nickName.equals("")'>
				#{nickName},
			</if>
			<if test="null != userAge">
				#{userAge},
			</if>
			<if test="null != sex">
				#{sex},
			</if>
			<if test="null != birthday">
				#{birthday},
			</if>
			<if test="null != isMarried">
				#{isMarried},
			</if>
			<if test="null != countryId">
				#{countryId},
			</if>
			<if test="null != cityId">
				#{cityId},
			</if>
			<if test="null != userTypeCode">
				#{userTypeCode},
			</if>
			<if test='null != icon and !icon.equals("")'>
				#{icon},
			</if>
			<if test='null != hobby and !hobby.equals("")'>
				#{hobby},
			</if>
			<if test='null != specialtyDes and !specialtyDes.equals("")'>
				#{specialtyDes},
			</if>
			<if test="null != beginWorkDate">
				#{beginWorkDate},
			</if>
			<if test="null != caseCount">
				#{caseCount},
			</if>
			<if test='null != motto and !motto.equals("")'>
				#{motto}
			</if>
		</trim>
	</sql>
<!-- 	<insert id="insert" keyProperty="id" useGeneratedKeys="true"> -->
	<insert id="insert" >
		insert into user_base (<include refid="insertKey"/>) values (<include refid="insertValue"/>)
	</insert>
	
	<select id="findById" resultMap="userBase">
		select * from user_base where id = #{id}
	
	</select>
	
	<update id="update">
		update user_base 
		<set>
			<!-- 去掉多余的逗号 -->
			<trim suffixOverrides=",">
				<if test='null != userName and !userName.equals("")'>
					user_name = #{userName},
				</if>
				<if test='null != nickName and !nickName.equals("")'>
					nick_name = #{nickName},
				</if>
				<if test="null != userAge">
					user_age = #{userAge},
				</if>
				<if test="null != sex">
					sex = #{sex},
				</if>
				<if test="null != birthday">
					birthday = #{birthday},
				</if>
				<if test="null != isMarried">
					isMarried = #{isMarried},
				</if>
				<if test="null != countryId">
					country_id = #{countryId},
				</if>
				<if test="null != cityId">
					city_id = #{cityId},
				</if>
				<if test="null != userTypeCode">
					user_type_code = #{userTypeCode},
				</if>
				<if test='null != icon and !icon.equals("")'>
					icon = #{icon},
				</if>
				<if test='null != hobby and !hobby.equals("")'>
					hobby = #{hobby},
				</if>
				<if test='null != specialtyDes and !specialtyDes.equals("")'>
					specialty_des = #{specialtyDes},
				</if>
				<if test="null != beginWorkDate">
					begin_work_date = #{beginWorkDate},
				</if>
				<if test="null != caseCount">
					case_count = #{caseCount},
				</if>
				<if test='null != motto and !motto.equals("")'>
					motto = #{motto}
				</if>
			</trim>
		</set>
		where id = #{id}
	</update>
	
	<delete id="deleteById">
		delete from user_base where id = #{id}
	</delete>
	
	
	
</mapper>