<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abroad.hr.dao.IUserJobDao">

	<resultMap type="com.abroad.hr.domain.UserJob" id="userJob">
		<result property="id" column="id" />	
		<result property="userId" column="user_id" />	
		<result property="companyName" column="company_name" />	
		<result property="companyAddress" column="company_address" />	
		<result property="businessType" column="business_type" />	
		<result property="duty" column="duty" />	
	</resultMap>
	
	<sql id="insertKey">
<!-- 		去掉最后一个逗号 -->
		<trim suffixOverrides=",">
				id,
			<if test="null != userId">
				user_id,
			</if>
			<if test='null != companyName and !companyName.equals("")'>
				company_name,
			</if>
			<if test='null != companyAddress and !companyAddress.equals("")'>
				company_address,
			</if>
			<if test='null != businessType and !businessType.equals("")'>
				business_type,
			</if>
			<if test='null != duty and !duty.equals("")'>
				duty
			</if>
		</trim>
	</sql>
	<sql id="insertValue">
		<!-- 		去掉最后一个逗号 -->
				#{id},
		<trim suffixOverrides=",">
			<if test="null != userId">
				#{userId},
			</if>
			<if test='null != companyName and !companyName.equals("")'>
				#{companyName},
			</if>
			<if test='null != companyAddress and !companyAddress.equals("")'>
				#{companyAddress},
			</if>
			<if test='null != businessType and !businessType.equals("")'>
				#{businessType},
			</if>
			<if test='null != duty and !duty.equals("")'>
				#{duty}
			</if>
		</trim>		
	</sql>
	
	
<!-- 	根据用户id查询用户职业 -->
	<select id="findUserJob" resultMap="userJob">
		select * from user_job where user_id = #{userId}
	</select>
	
	<insert id="insert" keyProperty="id" useGeneratedKeys="true">
		insert into user_job (<include refid="insertKey"/>) values (<include refid="insertValue"/>) 
	</insert>
	
<!-- 	根据用户id修改职业 -->
	<update id="update">
		update user_job 
		<set>
<!-- 		去掉最后一个逗号 -->
			<trim suffixOverrides=",">
				<if test='null != companyName and !companyName.equals("")'>
					company_name = #{companyName},
				</if>
				<if test='null != companyAddress and !companyAddress.equals("")'>
					company_address = #{companyAddress},
				</if>
				<if test='null != businessType and !businessType.equals("")'>
					business_type = #{businessType},
				</if>
				<if test='null != duty and !duty.equals("")'>
					duty = #{duty}
				</if>
			</trim>
		</set>
		where user_id = #{userId}
	</update>
	
<!-- 	根据用户id删除用户职业 -->
	<delete id="deleteUserJob">
		delete from user_job where user_id = #{userId}
	</delete>
</mapper>