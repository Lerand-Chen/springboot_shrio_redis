<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abroad.school.dao.ISpecialtyDao">

	<resultMap type="com.abroad.school.domain.Specialty" id="specialty">
		<result property="id" column="id" />	
		<result property="schoolId" column="school_id" />	
		<result property="specialty" column="specialty" />	
		<result property="des" column="des" />	
		<result property="educationLevelCode" column="education_level_code" />	
	</resultMap>
	<sql id="insertKey">
		<trim suffixOverrides=",">
				id,
			<if test="null != schoolId">
				school_id,
			</if>
			<if test='null != specialty and !specialty.equals("")'>
				specialty,
			</if>
			<if test='null != des and !des.equals("")'>
				des,
			</if>
			<if test="null != educationLevelCode">
				education_level_code
			</if>
		</trim>
	</sql>
	<sql id="insertValue">
	   <trim suffixOverrides=",">
	   			#{id},
			<if test="null != schoolId">
				#{schoolId},
			</if>
			<if test='null != specialty and !specialty.equals("")'>
				#{specialty},
			</if>
			<if test='null != des and !des.equals("")'>
				#{des},
			</if>
			<if test="null != educationLevelCode">
				#{educationLevelCode}
			</if>
		</trim>
	</sql>
	
	<sql id="findSql">
		select * from specialty
	</sql>
	
<!-- 	根据学校id查找专业信息-->
	<select id="findSpecialty" resultMap="specialty">
		<include refid="findSql"/>
		where school_id = #{schoolId}
	</select>
	
<!-- 	添加专业信息 -->
	<insert id="insert" keyProperty="id" useGeneratedKeys="true">
		insert into specialty (<include refid="insertKey"/>) values (<include refid="insertValue"/>)
	</insert>
	
<!-- 	根据学校id修改专业信息 -->
	<update id="update">
		update specialty 
		<set>
			<trim suffixOverrides=",">
				<if test='null != specialty and !specialty.equals("")'>
					specialty = #{specialty},
				</if>
				<if test='null != des and !des.equals("")'>
					des = #{des},
				</if>
				<if test="null != educationLevelCode">
					education_level_code = #{educationLevelCode}
				</if>
			</trim>
		</set>
		where school_id = #{schoolId}
	</update>
	
	<delete id="deleteSpecialty">
		delete from specialty where school_id = #{schoolId}
	</delete>
</mapper>